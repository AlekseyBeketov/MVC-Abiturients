@model List<MVCAbit.Controllers.AbiturientController.ChosenViewModel>
@{
    Layout = "LayoutChecker";
}
<table>
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Общее количество баллов</th>
            <th>Выбранная специальность</th>
            <th>Изменить</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var chosen in Model)
        {
            <tr>
                <td>@chosen.AbitSurname</td>
                <td>@chosen.AbitName</td>
                <td>@chosen.AbitPapa</td>
                <td class="centered-column">@chosen.TotalPoints</td>
                <td>@chosen.ChosenSpecName</td>
                <td>
                    <a class="change-button" href="/Abiturient/ChangeAdmChecker?id=@chosen.ChosenAbId&choseId=@chosen.ChosenSpecId">Изменить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />

<style>
    .change-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: white;
        color: black;
        text-decoration: none;
        border: 1px solid black;
    }

    .add-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f5f5dc;
        color: black;
        text-decoration: none;
    @*для удаления подкчеркивания в надписи*@ border: 1px solid black;
    }

    td, th {
        padding: 10px;
        border: 1px solid black;
    }

    th {
        text-align: center;
        font-size: x-large;
    }

    .centered-column {
        text-align: center;
    }
</style>